<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("News", "Index", "News", new { area = "" }, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Science", "Science", "News", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Culture", "Culture", "News", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("TVprogramm", "Index", "TV", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Offers", "Index", "Offer", new { area = "Offer" }, null)</li>

                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <div id="sidebar">
            @RenderSection("Sidebar", required: false)
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Actualno</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
