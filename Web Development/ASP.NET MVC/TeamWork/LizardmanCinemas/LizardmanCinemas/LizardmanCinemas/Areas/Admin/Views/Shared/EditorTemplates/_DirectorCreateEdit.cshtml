@model LizardmanCinemas.ViewModels.DirectorLongVM
@{
    Layout = null;
}


@using (Html.BeginForm("Edit", "ActorAdmin", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{

    <div id="error-grid" class="alert alert-error" style="display:none"></div>

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div>
        <div class="k-edit-form-container">
            <div class="editor-label">
                @Html.LabelFor(model => model.FirstName, "FirstName")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FirstName)
            </div>
        </div>
        <div class="k-edit-form-container">
            <div class="editor-label">
                @Html.LabelFor(model => model.LastName, "LastName")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LastName)
            </div>
        </div>
        <div class="k-edit-form-container">
            <div class="editor-label">
                @Html.LabelFor(model => model.Age, "Age")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Age)
            </div>
        </div>
        <div class="k-edit-form-container">
            <div class="editor-label">
                @Html.LabelFor(model => model.Sex, "Sex")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Sex)
            </div>
        </div>
        <div class="k-edit-form-container">
            <div class="editor-label">
                @Html.LabelFor(model => model.Picture, "Picture")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Picture)
            </div>
        </div>
    </div>
}
