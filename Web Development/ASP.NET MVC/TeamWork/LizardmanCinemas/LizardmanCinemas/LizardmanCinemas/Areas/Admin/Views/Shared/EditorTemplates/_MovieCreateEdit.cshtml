@model LizardmanCinemas.ViewModels.MovieVM
@{
    Layout = null;
}
@using (Html.BeginForm("Edit", "MovieAdmin", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
        <div id="error-grid" class="alert alert-error" style="display:none"></div>
    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
