                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Director)
                    </div>
                </div>

        <div class="k-edit-form-container">
            <div class="editor-label">
                @Html.LabelFor(model => model.Country, "Country")

                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.CountryName)
                    </div>
                </div>

