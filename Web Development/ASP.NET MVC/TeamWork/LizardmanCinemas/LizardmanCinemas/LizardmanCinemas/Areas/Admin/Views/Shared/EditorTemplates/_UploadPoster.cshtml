@{
    Layout = null;
}
@model string

@Html.HiddenFor(m => m)
@Html.ValidationMessageFor(m => m)

<script>
    function success(e) {
        var imagePath = e.response.PosterUrl;

        $("#Poster").val(imagePath).trigger("change");
    }
</script>

@(Html.Kendo().Upload()
    .Name("file")
    .Multiple(false)
    .Async(a => a
        .Save("Save", "MovieAdmin")
        .AutoUpload(true)
    )
    .Events(e => e.Success("success"))
)